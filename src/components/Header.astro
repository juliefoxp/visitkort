---
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1); // remove the first "/"
---
<header x-data="{ showmenu: false }" class="secondary-brown">
  <div id="navbar" class="container mx-auto p-4 flex flex-row justify-between items-center">
   <div id="logo" class="">
  <a href="/">
    <img src="/logo_black.png" alt="Logo" class="h-10 w-auto" />
  </a>
</div>

    <nav id="desktopmenu" class="hidden lg:block">
      <ul class="flex flex-row gap-4">
        <li><a href="/" class={currentPath === "" ? "font-bold" : ""}>HOME</a></li>
        <li><a href="/cv" class={currentPath === "cv" ? "font-bold" : ""}>CV</a></li>
      </ul>
    </nav>

    <button id="burgermenu" class="lg:hidden flex flex-col justify-between w-6 h-5" x-on:click="showmenu = !showmenu" aria-label="Toggle menu">
      <span class="block h-0.5 bg-black rounded"></span>
      <span class="block h-0.5 bg-black rounded"></span>
      <span class="block h-0.5 bg-black rounded"></span>
    </button>
  </div>

  <nav id="mobilmenu" class="flex flex-col content-center lg:hidden" 
    x-show="showmenu" x-transition x-on:click="showmenu = false" x-on:click.outside="showmenu = false">
    <ul class="border-t-2 border-b-2 border-black">
      <li class="text-center py-2"><a href="/" class={currentPath === "" ? "font-bold" : ""}>HOME</a></li>
      <li class="text-center py-2"><a href="/cv" class={currentPath === "cv" ? "font-bold" : ""}>CV</a></li>
    </ul>
  </nav>
</header>
