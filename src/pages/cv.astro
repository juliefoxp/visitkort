---
import MainLayout from "../layouts/MainLayout.astro";
import Button from '../components/Button.astro';
import Link from '../components/Link.astro';
import { Image } from 'astro:assets';
import thumbsup from "../assets/images/thumbsup.png";
---
<MainLayout title="CV">
  <section>
    <h1 class="text-[#736767] text-8xl font-bold text-center">CV</h1>
    <img 
      src="/cv.webp" 
      alt="cv billede" 
      class="w-full max-w-xs mx-auto block h-auto object-contain" 
    />
  </section>
 <section class="border border-black p-6 m-4 max-w-md md:max-w-lg lg:max-w-xl mx-auto rounded ">
  <h2 class="text-4xl text-center mb-4">TECHNICAL SKILLS:</h2>
  <ul class="list-disc list-outside ml-6 space-y-1">
    <li>Visual Studio Code</li>
    <li>HTML</li>
    <li>CSS</li>
    <li>JavaScript</li>
    <li>Figma</li>
    <li>Capcut</li>
    <li>Adobe InDesign</li>
    <li>Adobe Premiere Pro</li>
  </ul>
</section>


</MainLayout>